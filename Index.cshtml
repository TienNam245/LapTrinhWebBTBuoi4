@model List<TodoListApp.Models.TodoItem>
@{
    ViewData["Title"] = "DANH SÁCH CÔNG VIỆC";
}

<h1>@ViewData["Title"]</h1>

<h2>Tạo mới công việc</h2>

<table class="table table-bordered" style="width: 90%; border-collapse: collapse;">
    <thead style="background-color: #f2f2f2;">
        <tr>
            <th style="width: 10%; padding: 8px; border: 1px solid #ddd; text-align: left;">Mã công việc</th>
            <th style="width: 30%; padding: 8px; border: 1px solid #ddd; text-align: left;">Tên công việc</th>
            <th style="width: 30%; padding: 8px; border: 1px solid #ddd; text-align: left;">Trạng thái hoàn thành</th>
            <th style="width: 30%; padding: 8px; border: 1px solid #ddd; text-align: left;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="padding: 8px; border: 1px solid #ddd;">@item.Id</td>
                <td style="padding: 8px; border: 1px solid #ddd;">@item.Title</td>
                <td style="padding: 8px; border: 1px solid #ddd;">
                    @if (item.IsCompleted)
                    {
                        <span>✅ Đã hoàn thành</span>
                    }
                    else
                    {
                        <span>⬜ Chưa hoàn thành</span>
                    }
                </td>
                <td style="padding: 8px; border: 1px solid #ddd;">
                    <a href="/TodoItems/Edit/@item.Id" style="color: #ffc107; text-decoration: none; margin-right: 5px;">Sửa</a> |
                    <a href="/TodoItems/Details/@item.Id" style="color: #17a2b8; text-decoration: none; margin: 0 5px;">Chi tiết</a> |
                    <a href="/TodoItems/Delete/@item.Id" style="color: #dc3545; text-decoration: none; margin-left: 5px;">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div style="margin-top: 20px;">
    <a href="/TodoItems/Create" class="btn btn-primary" style="padding: 8px 16px; background-color: #007bff; color: white; text-decoration: none; border-radius: 4px;">Thêm công việc mới</a>
</div>
